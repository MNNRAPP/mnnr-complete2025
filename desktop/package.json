{
  "name": "mnnr-desktop",
  "version": "1.0.0",
  "description": "MNNR Desktop App - Windows, macOS, Linux",
  "main": "main.js",
  "author": "MNNR, LLC",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "app.mnnr.desktop",
    "productName": "MNNR",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "icon.png",
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
