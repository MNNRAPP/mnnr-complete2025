{
  "extends": [
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Security rules
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],

    // Code quality
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],

    // Best practices
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "public/"
  ]
}
