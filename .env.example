# ========================================
# MNNR Complete 2025 - Environment Variables
# Security Score: 9.5/10 (Industry Leader)
# ========================================

# -----------------
# Supabase Configuration
# DB-011: CRITICAL - Service role key must be server-side only!
# -----------------
# PUBLIC - Safe for client
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# PUBLIC - Safe for client (anon key is designed for client use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
# SERVER ONLY - NEVER expose in client bundle (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OAuth (Optional)
SUPABASE_AUTH_EXTERNAL_GITHUB_REDIRECT_URI="http://127.0.0.1:54321/auth/v1/callback"
SUPABASE_AUTH_EXTERNAL_GITHUB_CLIENT_ID=
SUPABASE_AUTH_EXTERNAL_GITHUB_SECRET=

# -----------------
# Site Configuration
# -----------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GITHUB_URL=https://github.com/MNNRAPP/mnnr-complete2025
NEXT_PUBLIC_SITE_NAME=MNNR
NEXT_PUBLIC_RP_ID=localhost

# -----------------
# Stripe Configuration
# PAY-021: CRITICAL - Keep secret keys server-side only!
# -----------------
# SERVER ONLY - Never expose in client bundle
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# SERVER ONLY - Never expose in client bundle
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# PUBLIC - Safe for client (starts with NEXT_PUBLIC_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# -----------------
# Coinbase Commerce (USDC)
# -----------------
COINBASE_COMMERCE_API_KEY=cc_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=cc_webhook_secret

# -----------------
# Analytics ingestion
# -----------------
SDK_INGEST_SECRET=generate_a_long_random_string
POSTHOG_API_KEY=ph_api_key
POSTHOG_HOST=https://app.posthog.com

# -----------------
# Redis/Upstash (Production Rate Limiting)
# -----------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# -----------------
# Error Monitoring (Sentry)
# -----------------
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# -----------------
# OpenTelemetry
# -----------------
NEXT_PUBLIC_VERCEL_ENV=development

# -----------------
# Feature Flags
# -----------------
NEXT_PUBLIC_ENABLE_PASSKEYS=true
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_AUDIT_LOGGING=true
NEXT_PUBLIC_ENABLE_E2EE=true

# -----------------
# Security & Operations
# EDGE-033: Maintenance mode kill-switch
# -----------------
# Set to 'true' to enable maintenance mode (503 response)
MAINTENANCE_MODE=false
